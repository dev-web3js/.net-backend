{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host={AZURE_POSTGRES_HOST};Port=5432;Database=houseiana;Username={AZURE_POSTGRES_USER};Password={AZURE_POSTGRES_PASSWORD};SSL Mode=Require;Trust Server Certificate=true;Timeout=30;Command Timeout=30",
    "Redis": "{AZURE_REDIS_CONNECTION_STRING}"
  },
  "JwtSettings": {
    "Secret": "{JWT_SECRET_KEY}",
    "Issuer": "houseiana-api",
    "Audience": "houseiana-client",
    "ExpiryInHours": 24
  },
  "AllowedHosts": "*"
}